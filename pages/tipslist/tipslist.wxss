/* pages/tipslist/tipslist.wxss */
.dashang-list{
  position: relative;
}
.people-list{
  padding: 20rpx;
}
.list{
  padding: 1rem 0;
  display: flex;
border-bottom: 0.8rpx solid #eee;
  padding-bottom: 1.2rem;
}
.avatar{
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  overflow: hidden;
  margin-right: .5rem;
}
.avatar image{
  width: 100%;
  height: 100%;
}
.info{
  flex: 1;
}
.name{
  font-size: 25rpx;
  color: #7e7e7e;
  position: relative;
  margin-bottom: .35rem;
}
.name text{
  position: absolute;
  right: 0;
}
.value{
  font-size: .7rem;
}
.value image{
  width: .73rem;
  height: .73rem;
  display: inline-block;
}
/*客服弹框  */

.am-modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.4);
}

.am-modal-wrap {
  position: fixed;
  overflow: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 100%;
  z-index: 999;
  -webkit-overflow-scrolling: touch;
  outline: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.am-modal {
  min-width: 70% !important;
  max-width: 70% !important;
}

.am-modal {
  position: relative;
}

.am-modal.am-modal-transparent .am-modal-content {
  border-radius: 0.18667rem;
  height: auto;
  padding-top: 0.4rem;
}

.am-modal-close {
  padding: 0;
  outline: none;
  position: absolute;
  right: 0.4rem;
  z-index: 999;
  height: 1.5rem;
  width: 1.5rem;
}

.am-modal-title {
  margin: 0;
  font-size: 50rpx;
  line-height: 1;
  color: #000;
  text-align: center;
}

.am-modal-body {
  font-size: 0.4rem;
  color: #888;
  height: 100%;
  line-height: 1.5;
  overflow: auto;
}

.contact-service-ctn {
  font-size: 36rpx;
  color: #999;
  text-align: center;
}

.contact-service-ctn image {
  width: 300rpx;
  height: 360rpx;
  margin-top: 20rpx;
}

.am-modal-content {
  position: relative;
  background-color: #fff;
  border: 0;
  background-clip: padding-box;
  text-align: center;
  height: 100%;
  overflow: hidden;
}

.am-modal-header {
  padding: 1rem .8rem .8rem;
}

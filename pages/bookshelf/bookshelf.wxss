/* pages/bookshelf/bookshelf.wxss */

.showNode {
  display: block;
}

.hideNode {
  display: none;
}

.header {
  height: 3rem;
  width: 100%;
  background-color: #fff;
  border-bottom: .8rpx solid #eee;
  text-align: center;
}

.header view {
  width: 5rem;
  line-height: 3rem;
  display: inline-block;
  font-size: 32rpx;
  padding: 0 20rpx;
}

.page-style-female .active {
  color: #ff87ba;
}

.page-style-male .active {
  color: #3a5ca2;
}

.center {
  padding: 0 20rpx;
}

.manage {
  height: 3rem;
}

.manage .btn-btn, .manage .btn-txt {
  display: inline-block;
}

.manage .btn-btn {
  float: left;
  font-size: 26rpx;
  color: #fff;
  background-color: #ccc;
  border-radius: 120rpx;
  padding: 5rpx 22rpx;
  margin: 30rpx 0 0 0;
}

.manage .btn-txt {
  float: right;
  text-align: right;
  font-size: 30rpx;
  color: #7e7e7e;
  line-height: 3rem;
}

.phbooks-list {
  overflow: hidden;
  float: left;
}

.phbooks {
  width: 207rpx;
  height: 360rpx;
  float: left;
  margin: 0 42rpx 30rpx 0;
  text-align: left;
  position: relative;
}

.phbooksImg {
  width: 100%;
  position: relative;
}

.phbooks:nth-child(3n) {
  margin-right: 0;
}

.phbooks .name {
  font-size: 0.8rem;
}

.phbooks .phimg {
  width: 100%;
  height: 280rpx;
  position: relative;
  box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.phimg-choose-status-wrap {
  width: 5rem;
  height: 8.1rem;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 999;
}

.phimg-choose-status {
  width: 1.2rem;
  height: 1.2rem;
  position: absolute;
  top: 0.5rem;
  right: 0.3rem;
}

.delBtn {
  width: 100%;
  height: 2.5rem;
  text-align: center;
  line-height: 2.5rem;
  color: #777;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.jxbooks {
  width: 100%;
  margin: 1rem 0;
  overflow: hidden;
  border-bottom: .8px solid #eee;
  padding-bottom: 0.7rem;
  position: relative;
}

.jxbooks-addImg {
  position: absolute;
  top: 0;
  right: 15rpx;
  width: 36rpx;
  height: 50rpx;
}

.jxbooks-del {
  position: absolute;
  bottom: 80rpx;
  right: 15rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
border-radius: 110rpx;
  color: #999;
  background-color: #eee;
}

.jxbooks:last-child {
  margin-bottom: 3rem;
  border-bottom: 0;
}

.jximg {
  width: 23%;
  height: 100%;
  float: left;
}

.jximg image {
  clear: both;
  width: 100%;
  text-align: center;
  margin-right: 0.5rem;
  height: 210rpx;
  box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.jxnr {
  float: left;
  font-size: 0.6rem;
  margin-left: 0.8rem;
}

.jxnr .bt {
  width: 400rpx;
  overflow: hidden;
}

.jxnr .name:nth-child(1) {
  width: 100%;
  height: 52rpx;
  overflow: hidden;
  margin-top: 15rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.jxnr .name:nth-child(2) {
  font-size: 26rpx;
  color: #ccc;
  margin-top: 10rpx;
}

.jxnr .name {
  display: block;
  left: 0.8rem;
}

.jxnr .nr {
  width: 13rem;
  margin-top: 0.4rem;
  height: 1.6rem;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #a7a7a7;
}

.zt {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 20rpx;
}

.zt text {
  text-align: center;
  padding: 0 10rpx;
  border-radius: 110rpx;
  border: 1rpx solid #ccc;
}

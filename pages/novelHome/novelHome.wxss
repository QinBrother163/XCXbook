.nrbox {
  font-size: 29rpx;
  color: #7e7e7e;
  line-height: 50rpx;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
  margin: 0.8rem 0;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.sjml {
  margin-top: 20rpx;
  position: relative;
  margin-bottom: 1rem;
}

.sjml text {
  font-size: 32rpx;
}
#root .h3{
  position: relative;
}
#root .h3::before {
  content: '';
  width: 8rpx;
  height: 44rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  left: -15rpx;
}
.page-style-male .h3::before {
  background-color: #3a5ca2;
}

.page-style-female .h3::before {
  background-color: #ff87ba;
}

.sjml navigator {
    margin-top:  0.3rem;  
    font-size: 28rpx;
 border-radius: 0.2rem;
}
.sjml .sjml-border{
  padding: 10rpx 15rpx;
  border: 1rpx solid #eee;
}
.sjml .new {
  background-color: #f6f6f6;
  padding: 10rpx 15rpx;
  border: 1rpx solid #eee;
 margin-top: 20rpx;
  position: relative;
}
.new-title{
  display: inline-block;
  width: 500rpx;

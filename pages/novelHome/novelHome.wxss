/* 打赏弹窗盒子样式 */

.reward-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  z-index: 55;
}

.reward-box .reward {
  background-color: #fff;
  border-radius: 10rpx;
  width: 700rpx;
  height: 300rpx; 
  position: absolute;
  margin: 0 auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.reward-box .reward view {
  width: 25%;
}


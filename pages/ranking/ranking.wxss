.user image {
  width: 2.3rem;
  height: 2.3rem;
  border-radius: 50%;
  margin-right: 0.8rem;
  float: left;
}

.center {
  padding: 0 25rpx;
}

.navGroups {
  min-height: 1.8rem;
  margin: 1rem 0;
}

.page-style-male .navGroups .cli {
  color: #fff;
  background-color: #3a5ca2;
}

.page-style-female .navGroups .cli {
  color: #fff;
  background-color: #ff87ba;
}

.navGroups view {
  width: 230rpx;
  display: inline-block;
  height: 1.6rem;
  line-height: 1.6rem;
  font-size: 0.8rem;
  text-align: center;
}

.page-style-male .navGroups view {
  color: #3a5ca2;
  border: 1px solid #3a5ca2;
}

.page-style-female .navGroups view {
  color: #ff87ba;
  border: 1px solid #ff87ba;
}

.navGroups view:nth-child(1) {
  border-radius: 1.2rem 0 0 1.2rem;
}

.navGroups view:nth-child(2) {
  border-left-width: 0;
  border-right-width: 0;
}

.navGroups view:nth-child(3) {
 border-radius: 0 1.2rem 1.2rem 0;
}

.jxbooks {
  width: 100%;
  margin: 1rem 0;
  overflow: hidden;
   border-bottom: 0.8rpx solid #eee;
  padding-bottom: 1.2rem;
}

.jxbooks:last-child {
  margin-bottom: 1rem;
  border-bottom: 0;
}
.jximg{
  position: relative;
margin-left: 10rpx;
}
.jximg .jximg-img {
  float: left;
  width: 23%;
  height: 210rpx;
  text-align: center;

  box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}
.book-top-tag {
  position: absolute;
  top: 0;
  left: 0;
  width: 1.1rem;
  height: 1.9rem;
}
.book-top-tag-num {
  position: absolute;
  top: 0;
  left: 12rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 1.6rem;
}
.jxbooks:last-child .book-top-tag-num{
  left: 0;
}
.jxnr {
  float: left;
  font-size: 0.6rem;
  margin-left: 0.8rem;
width: 71%
}


.jxnr .name {
  display: block;
  left: 0.8rem;
  font-size: 34rpx;
}

.jxnr .nr {
  width: 100%;
  margin-top: 10rpx;
margin-bottom: 15rpx;
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #a7a7a7;
}

.zt {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 10rpx;
}
.zt text{
  text-align: center;
  padding: 0 10rpx;
font-size: 24rpx;
  border-radius: 120rpx; 
  border: 1rpx solid #ccc;
}
.foot {
  height: 2.5rem;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  border-top: 1px solid #ccc;
}

.foot .option {
  width: 20%;
  height: 2.5rem;
  float: left;
  position: relative;
  margin-right: 1rem;
  text-align: center;
}

.footimg {
  width: 1.5rem;
  height: 1.5rem;
  text-align: center;
  padding-top: 0.1rem;
}

.foot navigator {
  font-size: 0.7rem;
  text-align: center;
  margin-top: -0.2rem;
}
